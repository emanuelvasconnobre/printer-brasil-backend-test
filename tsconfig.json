{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@modules/*": [
        "src/*"
      ],
    }
  },
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register",
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}